@model RDS_Entities.Category

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Category</h2>

<form method="post">

    <input type="hidden" name="id" value="@Model.ID" />

    <label>Name</label>
    <input name="name" value="@Model.Name" />

    <br />

    <label>Description</label>
    <input name="Description" value="@Model.Description" />

    <button type="submit">Save</button>
</form>